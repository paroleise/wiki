<div class="container">
  <p id="notice"><%= notice %></p>
  <h4 class="pt-5 pb-2">編集履歴</h4>
  <table class="table container list-table superviser-list-table mt-5">
    <thead>
      <tr>
        <th><%= t("activerecord.attributes.machine.updated_at") %></th>
        <th><%= t("activerecord.attributes.machine.name") %></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @machines.each do |machine| %>
        <tr>
          <td><%= machine.updated_at.strftime("%Y年%m月%d日 %H:%M") %></td>
          <td><%= link_to sakuraiyushi_machine_path(machine) do %><%= machine.name %><% end %></td>
          <td><%= link_to '編集', edit_sakuraiyushi_machine_path(machine) %></td>
          <td><%= link_to '編集履歴', sakuraiyushi_versions_path(machine) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

