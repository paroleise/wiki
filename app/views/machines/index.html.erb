<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Machines</h1>

  <table>
    <thead>
      <tr>
        <th><%= t("activerecord.attributes.machine.name") %></th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @machines.each do |machine| %>
        <tr>
          <td><%= machine.name %></td>
          <td><%= link_to 'Show', machine %></td>
          <td><%= link_to 'Edit', edit_machine_path(machine) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>